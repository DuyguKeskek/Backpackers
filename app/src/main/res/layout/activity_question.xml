<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yoloo.android.ui.counter.QuestionActivity">

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:text="Pick from Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pick"
        app:layout_constraintLeft_toLeftOf="@+id/activity_question"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/send"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/preview"
        app:layout_constraintLeft_toLeftOf="@+id/activity_question"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_question"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/pick"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_question"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/preview"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/pick"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_question"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        app:layout_constraintBottom_toTopOf="@+id/preview"
        android:layout_marginBottom="32dp" />
</android.support.constraint.ConstraintLayout>
