<resources>

    <style name="Yoloo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Yoloo.SignIn">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Yoloo.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Yoloo.SignInButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
