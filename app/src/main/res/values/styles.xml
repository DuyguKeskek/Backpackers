<resources>

    <style name="Yoloo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Yoloo.SignIn">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Yoloo.YolooSignIn">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="Yoloo.YolooSignUp">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="Yoloo.Home">
    </style>

    <style name="Theme.Yoloo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Yoloo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Yoloo.SignInButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Yoloo.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Yoloo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Yoloo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>